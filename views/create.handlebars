<div class="mx-auto my-2">
    <h1>Add New Book</h1>
    <form action="/create" method="post">
        <div class="form-group">
            <label for="bookName">Title</label>
            <input type="text" name="name" placeholder="Book title" class="form-control">
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" name="author" placeholder="Author" class="form-control">
        </div>
        <div class="form-group">
            <label for="numberOfPages">No Of Pages</label>
            <input type="number" name="numberOfPages" class="form-control">
        </div>
        <div class="form-group">
            <label for="yearOfPublication">Year Published</label>
            <input type="date" name="yearOfPublication" class="form-control">
        </div>
        <div class="form-group">
            <label for="bookEdition">Edition</label>
            <input type="text" name="bookEdition" placeholder="First, Second ..." class="form-control">
        </div>
        <div class="form-group">
            <label for="bookFormat">Format</label>
            <input type="text" name="bookFormat" placeholder="PDF, EPUB, MOBI " class="form-control">
        </div>
        <br>
          <button type="submit" class="btn btn-block btn-primary mb-2">Add Book</button>
    </form>
</div>